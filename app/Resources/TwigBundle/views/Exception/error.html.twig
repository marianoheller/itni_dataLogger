<html>
<head>

    {#CSS#}
    {% stylesheets  filter="cssrewrite"
    '@bootstrap_css'
    '@fontawesome_css'
    %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}


    {#Fonts#}
    {% stylesheets  '@fontawesome_woff2'
    '@fontawesome_woff'
    '@fontawesome_ttf'
    '@fontawesome_otf'%}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}

    <style>
        body { background-image: url(data:image/png;base64,);}
        .error-template {padding: 40px 15px;text-align: center;}
        .error-actions {margin-top:15px;margin-bottom:15px;}
        .error-actions .btn { margin-right:10px; }
        .inti-logo {-webkit-filter: invert(100%); filter: invert(100%);}
    </style>

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <img class="inti-logo p-b-2" src="{{ asset('media/img/inti_logo.png') }}"/>
                    <h1>
                        Oops!</h1>
                    <h2>
                        {{ status_code }} {{ status_text }}</h2>
                    <div class="error-details">
                        Sorry, an error has occured.
                    </div>
                    <div class="error-actions">
                        <a href="{{ path('homepage') }}" class="btn btn-primary">
                            <span class="fa fa-home"></span>
                            Take Me Home </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>



</html>