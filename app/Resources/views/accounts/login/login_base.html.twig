<html>
    <head>
        <link rel="stylesheet" href="{{ asset('media/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('media/css/login.css') }}">
        <title>Ingresar al sistema</title>

    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class='col-md-3'></div>
                <div class="col-md-6">
                    <div class="login-box well">
                        <form method="post" action="{{ path('login') }}">
                            {% block login_alert %}
                            {% endblock %}
                            <legend>Ingresar al sistema</legend>

                            <div class="form-group">
                                <label for="username-email">Usuario</label>
                                <input value='' name="_username" id="username" placeholder="Usuario" type="text" class="form-control" value="{{ last_username }}" />
                            </div>

                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input id="password" name="_password" value='' placeholder="Contraseña" type="password" class="form-control" />
                            </div>

                            <input type="hidden" name="_target_path" value="/" />

                            <div class="form-group">
                                <input type="submit" class="btn btn-default btn-login-submit btn-block m-t-md" value="Ingresar" />
                            </div>
                            {#
                            <span class='text-center'><a href="/reset" class="text-sm">Olvidé mi contraseña</a></span>
                            <div class="form-group">
                                <p class="text-center m-t-xs text-sm">¿No posee una cuenta?</p>
                                <a href="/register" class="btn btn-default btn-block m-t-md">Crear una cuenta</a>
                            </div>#}
                        </form>

                    </div>
                </div>
                <div class='col-md-3'></div>
            </div>
        </div>

    </body>

<!-- END # MODAL LOGIN -->
</html>